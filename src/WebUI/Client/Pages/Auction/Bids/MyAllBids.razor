@page "/bids"
@using Cegeka.Auction.Domain.Enums;

<PageTitle>My Bids</PageTitle>

@if (Bids != null && Bids.Bids.Count > 0)
{
    <table class="table table-striped table-hover w-75">
        <thead>
            <tr>
                <th scope="col"><span class="fas fa-money-bill" aria-hidden="true"></span> Amount</th>
                <th scope="col"><span class="fas fa-coins" aria-hidden="true"></span> Currency</th>
                <th scope="col">
                    <span class="oi oi-calendar" aria-hidden="true"></span> Date
                </th>
                <th scope="col"><span class="fas fa-gavel" aria-hidden="true"></span>Auction</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var bid in Bids.Bids)
            {
                <tr>
                    <td>@bid.Amount</td>
                    <td>@Enum.GetName(typeof(Currencies), bid.CurrencyId)</td>
                    <td>@bid.CreatedUtc.ToString("MM/dd/yyyy HH:mm")</td>
                    <td>
                        <a href="@($"auctions/{bid.AuctionItemId.ToString()}/view")" data-toggle="tooltip" data-placement="bottom">@bid.Title</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <h5 class="text-center">You haven't place any bid yet.</h5>
}